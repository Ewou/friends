<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row mb-2">
    <%= form.label :name, style: "display: block", class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-4">
    <%= form.text_field :name, class: 'form-control', style: 'border-radius:0px;' %>
    </div>
  </div>

  <div class="row mb-2">
    <%= form.label :nickname, style: "display: block", class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-4">
    <%= form.text_field :nickname, class: 'form-control', style: 'border-radius:0px;' %>
    </div>
  </div>

  <div class="row mb-2">
    <%= form.label :surname, style: "display: block", class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-4">
    <%= form.text_field :surname, class: 'form-control', style: 'border-radius:0px;' %>
    </div>
  </div>

  <div class="row mb-2">
    <%= form.label :email, style: "display: block", class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-4">
    <%= form.text_field :email, class: 'form-control', style: 'border-radius:0px;' %>
    </div>
  </div>

  <div class="row mb-2">
    <%= form.label 'Where did we meet?', style: "display: block", class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-4">
      <%= form.select :friend_place, Friend.friend_places.keys, { include_blank: 'Where did we meet...' }, class: 'form-select', style: 'border-radius:0px;' %>
    </div>
  </div>

  <div>
    <%= form.submit class: 'btn btn-success', style: 'border-radius:0px;' %>
  </div>

<% end %>
